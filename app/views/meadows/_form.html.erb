<h2>CADASTRO DE PRATOS</h2>
<div class="row">
  <div class="col-xs-8">
    <%= f.association :restaurant, prompt: "Escolha um restaurante", input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' } %>
  </div>
</div>
<div class="row">
  <div class="col-xs-8">
    <%= f.input :name, input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' } %>
  </div>
</div>
<div class="row">
  <div class="col-xs-4">
    <%= f.input :price, input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' } %>
  </div>
</div>
